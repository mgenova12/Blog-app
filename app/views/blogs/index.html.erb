<%if session[:user_id]%>  
  <h4>Welcome! <%= current_user.first_name %></h4>
<%end %>

<h1 align="center"> Here are all the Blogs!</h1>

<% @blogs.each_slice(3) do |three_blogs| %>
  <div class="row">
    <% three_blogs.each do |blog| %>
      <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
              <h3><%= blog.title %></h3>
              <p>Author: <%= blog.author %></p>
              
              <p><a href="/blogs/<%= blog.id %>" class="btn btn-primary" role="button">Read More</a> </a></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>